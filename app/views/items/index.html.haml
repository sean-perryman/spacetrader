%h1 Listing Items
%table.table.table-striped
  %tr
    %th name
    %th Base price
    %th{:colspan => "3"}
  - @items.each do |item|
    %tr
      %td= item.name
      %td= item.base_price
      %td= link_to 'Show', item, :class => "btn btn-default"
      %td= link_to 'Edit', edit_item_path(item), :class => "btn btn-default"
      %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"
%br/
= link_to 'New Item', new_item_path, :class => "btn btn-success"
