%h1 Listing Ships
%table.table.table-striped
  %tr
    %th Name
    %th Base cargo
    %th{:colspan => "3"}
  - @ships.each do |ship|
    %tr
      %td= ship.Name
      %td= ship.Base_Cargo
      %td= link_to 'Show', ship, :class => "btn btn-default"
      %td= link_to 'Edit', edit_ship_path(ship), :class => "btn btn-default"
      %td= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"
%br/
= link_to 'New Ship', new_ship_path, :class => "btn btn-success"
